pipeline {

    agent{
        docker {
            image 'khaliddinh/ansible'
        }
    }
    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }
    stages {

        stage('Deploy Mysql container') {
           
            steps {
                withCredentials([file(credentialsId: 'ansible_key', variable: 'ansible_key')]) {
                    sh 'sudo ls -la'
                    sh "sudo cp /$ansible_key ansible_key"
                    sh 'sudo cat ansible_key'
                    sh 'sudo ansible --version'
                    sh 'sudo ls -la'
                    sh 'sudo chmod 400 ansible_key '
                    sh 'sudo ansible-playbook -i hosts --private-key ansible_key playbook.yml'
            }
            }
        }
        
    }
    post {
        // Clean after build
        always {
            cleanWs()
        }
    }
}